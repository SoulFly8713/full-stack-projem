{
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/backend/server.py"
    },
    // Front-end'in 404 hatalarÄ±nÄ± Ã§Ã¶zmek iÃ§in:
    // Dosya yapÄ±nÄ±zdaki public klasÃ¶rÃ¼nÃ¼ kullanÄ±yoruz.
    {
      "source": "/(.*)",
      "destination": "/frontend/public/index.html"
    }
  ],
  "builds": [
    // Backend'i Vercel Python Runtime ile derle
    {
      "src": "backend/server.py",
      "use": "@vercel/python"
    },
    // ğŸš¨ Frontend Build Komutunu Zorunlu Olarak Ekliyoruz ğŸš¨
    // Bu, Backend derlenirken Frontend'in de hazÄ±rlanmasÄ±nÄ± saÄŸlar.
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "installCommand": "npm install --prefix frontend",
        "buildCommand": "npm run build --prefix frontend"
      }
    }
  ]
}
